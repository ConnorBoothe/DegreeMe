<body class="bg-light">
  <div class="blocker"></div>
  <div class="overlay"></div>
  <div class="page-container ">
    <div id="headerContainer">
      <%- include ('partials/header.ejs') %>
      <%-include ('partials/popout-menu.ejs') %>
    </div>
    <div class="signup-container">
      <div class="signUpWrapper">
        <div class="signup-form" class="">
          <h3 class="text-light">Join degreeMe</h3>
          <h2 class="signup-msg"><%=qs.msg%></h2>
          <form method="POST" action="/SignUp" enctype="multipart/form-data" class="form">
            <div class="name">
              <div class="input-container3">
                <p class="loginLabel1">First Name</p>
                <input name="first_name" type="text" class="input-field1 focus:outline-none first"
                  spellcheck="false" autocomplete="autocomplete_off_hack_xfr4!k" style="text-transform: capitalize;"  />
                <p class="firstTxt"></p>
              </div>
              <div class="input-container4 ">
                <p class="loginLabel1">Last Name</p>
                <input name="last_name" type="text" class="input-field1 last" spellcheck="false"
                  autocomplete="autocomplete_off_hack_xfr4!k" style="text-transform: capitalize;" />
                <p class="lastTxt"></p>
              </div>
            </div>
            <div class="name">
              <div class=" input-container3">
                <p class="loginLabel1">School</p>
                <input name="school" type="text" class="input-field1 schoolSignUp" value="UNC Charlotte"
                  spellcheck="false" readonly autocomplete="autocomplete_off_hack_xfr4!k" />
                <!-- <div class="input-container2 text-dark schoolSuggestions">
                  <ul>
                    <li><span class="schoolTxt btn btn-light">University of North Carolina at Charlotte</span></li>
                  </ul>
                </div> -->
              </div>
              <div class="input-container4">
                <p class="loginLabel1">University Email</p>
                <input name="email" type="email" class="input-field1 emailSignUp"
                  autocomplete="autocomplete_off_hack_xfr4!k" />
                <p class="emailTxt"></p>
              </div>
            </div>
            <div class="name">
              <div class="input-container3 majorContainer">
                <p class="loginLabel1">Major</p>
                <input name="major" type="text" class=" input-field1 focus:outline-none major" spellcheck="false"
                  autocomplete="off" />
                <p class="majorTxt"></p>
                <div class="major-autocomplete">
                  <ul class="major-list">
                    <p class='emptySearch'>Search Majors</p>
                  </ul>
                </div>
              </div>
              <div class="input-container4">
                <p class="loginLabel1">Class Standing</p>
                <select class="classStanding-select">
                  <option></option>
                  <option>Freshman</option>
                  <option>Sophomore</option>
                  <option>Junior</option>
                  <option>Senior</option>
                  <option>Graduate Student</option>
                </select>
                <p class="classTxt"></p>
                <div class="standing-autocomplete">
                  <ul class="major-list">
                    <p class='emptySearch'>Search Majors</p>
                  </ul>
                </div>
              </div>
            </div>
            <div class=" input-container2">
              <p class="loginLabel1">Username</p>
              <input name="handle" type="text" class="input-field1 handle" spellcheck="false"
                autocomplete="off" />
              <p class="handleTxt"></p>
            </div>
            <div class="form-group">
              <div class="input-container2">
                <p class="loginLabel1">Password</p>
                <input autocomplete="off" name="password" type="password" class=" input-field1 passwordSignUp">
                <p class="pwTxt"></p>
              </div>
            </div>
            <div class="form-group">
              <div class="input-container2">
                <p class="loginLabel1">Retype Password</p>
                <input name="retypePW" type="password" class=" input-field1 retypePasswordSignUp">
                <p class="ReTypeTxt"></p>
              </div>
            </div>
        </div>
      </div>
