<!DOCTYPE html>
    <head>
        <title>Leave a Review | degreeMe </title>
        <link rel="icon" href="../assets/img/favicon.png" type="image/png" />
        <meta charset="UTF-8">
        <link rel="icon" href="assets/img/favicon.png" type="image/png" />
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@600&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="../assets/css/bootstrap.min.css">        <link href="../assets/css/main1.css" rel="stylesheet">
        <link href="../assets/css/home.css" rel="stylesheet">
                 <!-- Google Tag Manager -->
   <script type="text/javascript" src="assets/js/googleTagManager.js"></script>
    <!-- End Google Tag Manager -->

        <script src="../assets/jquery/dist/jquery.js"></script>
    
    </head>
    <body>
                <!-- Google Tag Manager (noscript) -->
                <%- include('partials/googleTagManager.ejs') -%>
                <!-- End Google Tag Manager (noscript) -->
                    
        <%- include ('partials/mobileComingSoon.ejs')%>
        <div class="homeWrap">
        <div class="page-container">
            <%- include ('partials/sideBar.ejs')%>
            <%- include ('partials/horizontalHeader.ejs')%>
            <div class="homeContainer">
                
                    <div class="contentBlockReview">
                            <div class="reviewTitle"><h1 class="text-light">Rating <%=params.handle%></h1></div>
                            <input type="hidden" class="tutorHandle" value=""/>
                    <div id="reviewWrapper">
                            
                                <div class="review-form">
                                    <form method="POST" action="/LeaveAReview">
                                       
                                        <div class="form-group">
                                            <label class="text-light reviewLabel">Rating</label>
                                            <div id="ratingContainer">
                                                <div class="rating">
                                                    <input type="radio" class="starVal" name="star" id="star1" value="5"><label for="star1"></label>
                                                    <input type="radio" class="starVal" name="star" id="star2" value="4"><label for="star2"></label>
                                                    <input type="radio" class="starVal" name="star" id="star3" value="3"><label for="star3"></label>
                                                    <input type="radio" class="starVal" name="star" id="star4" value="2"><label for="star4"></label>
                                                    <input type="radio" class="starVal" name="star" id="star5" value="1"><label for="star5"></label>
                                                </div>
                                                <small class="reviewStarErr"></small>
                                            </div>
                                        </div>
                                        <div class="">
                                            <label class="text-light reviewLabel">Comment</label>
                                            <textarea name="message" class="form-control reviewFieldDark reviewMsg <%=session.theme%>" cols="4"></textarea>
                                            <small class="reviewMsgErr"></small>
                                        </div>
                                        <br>
                                        <input name="connectionID" type="hidden" value=""/>
                                        <input name="tutor" type="hidden" value="<%=params.handle%>"/>
                                        <input name="course" type="hidden" value=""/>
                                        <button type="submit" class="btn btn-primary reviewSubmit">Submit Review</button>
                                        <br>
                                        <br>
                                    </form>
                                </div>
                        </div>
                </div>
                </div>
            </div>
            </div>
            <script src="../assets/jquery/jquery.session/jquery.session.js"></script>
            <script type="text/javascript" src="../assets/js/displayMyCourses.js"></script>
            <script src="../assets/js/getNotifications.js"></script>
            <script src="../assets/js/popper.min.js"></script>
            <script type="text/javascript" src="../assets/js/bootstrap.min.js"></script>
            <script type="text/javascript" src="../assets/js/SiteWideSearch.js"></script>
            <script type="text/javascript" src="../assets/js/highlightCurrentMenuItem.js"></script>
            <script src="../assets/jquery/jquery.session/jquery.session.js"></script>
            <script type="text/javascript" src="../assets/js/bootstrap.min.js"></script>
            <script type="text/javascript" src="../assets/js/reviewValidation.js"></script>
            <script type="text/javascript" src="../assets/js/Client-DateFunctions.js"></script>

    </body>
</html>