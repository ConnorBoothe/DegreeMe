 <!-- Modal -->
 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css"></link>
 <script src="../assets/js/Groups/createMeetup.js"></script>
 <div class="modal fade" id="newMeetup" tabindex="-1" role="dialog" aria-labelledby="meetupModal" aria-hidden="true">
   <div class="modal-dialog " role="document">
     <div class="modal-content color-dark">
       <div class="modal-header">
         <h5 class="modal-title text-light" id="exampleModalCenterTitle"><span class="groupModalTitle">New <%=studyGroup.GroupName%> Meetup </span></h5>
         
         <button type="button" class="close" data-dismiss="modal" aria-label="Close">
           <span aria-hidden="true">&times;</span>
         </button>
       </div>
       <div class="modal-body">
              <div class="">
                
            </div>
              <input name="groupId" value="<%=params.GroupId%>" type="hidden" class="input-field" />
              <input name="groupName" value="<%=studyGroup.GroupName%>" type="hidden" class="input-field" />
                <div class="meetup-item-container">
                <p class="text-light meetupLabel">Title</p>
                <input autocomplete="off" name="description" type="text" class=" input-field" placeholder="ie Midterm Review"/>
                </div>
                <div class="date-picker-container">
                  <div class="date-picker"></div>
                </div>
        
       
      
      <div class="time-select-container">
        <ul class="time-list">

      <li>
        <p class="text-light timeLabel">Time</p>
        <select name="hour" class="time-select">
          <%for(var x = 1; x < 13; x++) {%>
              <option value="<%=x%>"><%=x%> </option>
        
           
          <%}%>
          
        </select> :
          <select name="min" class="time-select">
                <option>00 </option>
                <option>30 </option>
          </select>
          <select name="AMorPM" class="time-select">
            <option>AM </option>
            <option>PM </option>
      </select>
    </li>
    <li>
      <p class="text-light timeLabel">Duration</p>
      <select name="duration" class="time-select">
        <option value="1">1</option>
        <option value="2">2 </option>
        <option value="3">3 </option>
  </select>     
  <span class="hours-span">hours</span>
    </li>
  </ul>
</div>
               </div>

                <div class="modal-footer">
                  <input  placeholder="Subject" value="Create Meetup" type="submit" class="btn btn-primary createMeetup"/>
            
              </div>
              <input type="hidden" name="courseName" value="<%=studyGroup.Subject%>"/>
           
            
       
       
     </div>
   </div>
 </div>