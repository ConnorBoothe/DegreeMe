        <!-- NO STRIPE SELLER ACCOUNT -->
        <div id="settings-form">
          <form method="POST" action="/MakeStripeAccount" class="sellerAccount-form">
            <h1 class="createSellerTitle">Create a Seller Account</h1>
            <p class="create-seller-text">We do not save any sensitive data on our servers. All credit card information is safely stored with Stripe, the leading internet payments processor.</p>
            <p>
              <script type="text/javascript" src=""></script>
              
            </p>
            <!-- Routing Number -->
            <div class="container">
              <div class="panel panel-dark">
                <div class="panel-heading">
                  <h2 class="panel-title">Personal Information</h2>
                </div>
                <div class="panel-body">
                  <div id="address">
                    <div class="row">
                      <div class="col-md-6">
                        <label class="control-label" for="routNum">Date of Birth</label>
                        <input class="form-control" type="text" id="dob" name="dob" value="" placeholder="mm/dd/yyyy" maxlength="10" required><br>
                      </div>
                      <div class="col-md-6">
                        <label class="control-label" for="accNum">Phone Number</label>
                        <input class="form-control" type="text" id="phone" name="phone" minlength="12" maxlength="13" placeholder="xxx-xxx-xxxx"/>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6">
                        <label class="control-label" for="routNum">Last four digits of your social security number</label>
                        <input class="form-control" type="text" id="ssn" name="ssn" minlength="4" maxlength="4" placeholder="xxxx"/><br>
                      </div>
                      
                  </div>
                </div>
              </div>

        </div>
            <!-- Address -->
            <div class="container">
              <div class="panel panel-dark">
                <div class="panel-heading">
                  <h2 class="panel-title">Add your Address</h2>
                </div>
                <div class="panel-body">
                  <div id="address">
                    <div class="row">
                      <div class="col-md-6">
                        <label class="control-label">Street address</label>
                        <input class="form-control" id="street_number" name="street_number">
                      </div>
                      <div class="col-md-6">
                        <label class="control-label">City</label>
                        <input class="form-control field" id="locality" name="locality">
                      </div>
                    </div>
                    <div class="row">
                      <!-- <div class="col-md-6">
                        <label class="control-label">State</label>
                        <input class="form-control" id="administrative_area_level_1" name="administrative_area_level_1"
                          required>
                      </div> -->
                      <div class="col-md-6">
                        <%- include ('partials/state-select.ejs')%>
                      </div>
                      <div class="col-md-6">
                        <label class="control-label">Zip code</label>
                        <input class="form-control" id="postal_code" name="postal_code">
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6">
                        <label class="control-label">Country</label>
                        <input class="form-control" id="country" name="country" value="US" disabled="true">
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
         
            <!-- Routing Number -->
            <div class="container">
              <div class="panel panel-dark">
                <div class="panel-heading">
                  <h2 class="panel-title">Bank Information</h2>
                </div>
                <div class="panel-body">
                  <div id="address">
                    <div class="row">
                      <div class="col-md-6">
                        <label class="control-label" for="routNum">Routing Number</label>
                        <input class="form-control" type="number" id="routNum" name="routNum" value=""
                          minlength="9" maxlength="9" required>
                      </div>
                      <div class="col-md-6">
                        <label class="control-label" for="accNum">Account Number</label>
                        <input class="form-control" type="number" id="accNum" name="accNum" value=""
                          minlength="12" maxlength="12" required>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="buttonSubmit">
                <button type="submit" class="btn btn-primary createSeller-submit">Start Earning</button>
                <div class="payment-processing-container">
                  <div class="d-flex justify-content-center">
                      <div class="spinner-border" role="status">
                          <span class="sr-only"></span>
                      </div>
                      <h3 class="payment-status">Creating Seller Account</h3>
                  </div>
  
              </div>
                <p>By clicking 'Submit', you are agreeing to Stripe's
                  <a href="https://stripe.com/legal" target="_blank">Terms of Service</a></p>
                <!-- add address to stripe ToS -->
              </div>
          </form>
        </div>
